
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Available Services</title>
</head>
<body>
    <div style="background-image: url('@Url.Content("~/images/home2.jpg")'); background-position: center; background-size: cover; background-repeat: no-repeat; width: 100%; color: black; padding: 95px;">
        <div style="text-align: center; color: navy; font-size: 4rem; margin-top: -40px;">
            <h2>Our Services</h2>
        </div>
        <div style="display: flex; flex-wrap: wrap; justify-content: space-around; gap: 20px;">
            @foreach (var myservice in Model)
            {
                var imageUrl = Url.Action("DownloadImage", "ServiceTbs", new { id = myservice.Id });
                <div style="width: 300px; border-radius: 10px; overflow: hidden; box-shadow: 0 4px 8px rgba(0,0,0,0.1); transition: transform 0.3s; border: 1px solid #ddd; background: white; position: relative; margin-top: 60px;">
                    <img alt="service" style="width: 100%; height: 200px; object-fit: cover; border-top-left-radius: 10px; border-top-right-radius: 10px;" src="@imageUrl" />
                    <div style="padding: 15px; display: flex; flex-direction: column; height: 100%;">
                        <a href="@Url.Action("BookService", "ServiceTbs", new { id = myservice.Id })" style="text-decoration: none; color: inherit; flex: 1;">
                            <h3 style="font-size: 24px; margin: 0;">@myservice.ServiceName</h3>
                            <p style="font-size: 16px; margin: 10px 0; font-style: italic;">@myservice.ShortDesc</p>
                                <Button style="font-size: 18px; background-color: blue; color: white; padding: 8px 12px; border: none; border-radius: 5px; cursor: pointer; position: absolute; bottom: 10px; right: 10px;">
                                    Rs. @myservice.ServiceCharge
                                </Button>
                            
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>